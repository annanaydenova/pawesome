<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add your animal</h1>
      <%= current_user.email %>

      <%= simple_form_for @animal do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.input :description %>
        <%= f.input :animal_type %>
        <%= f.input :address %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.submit %>
      <% end %>
      <br>
      <i class="fas fa-plus"></i><%= link_to "Back to home page", root_path %>
    </div>
  </div>
</div>

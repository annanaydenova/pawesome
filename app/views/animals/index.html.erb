<div class="banner" style="background-image: url('<%= image_path 'puppies.jpg' %>'); object-fit: cover;">
  <div class="banner-content">
    <br>
    <br>
    <h1>Be Pawesome</h1>
      <p>
        Join thousands of happy <span id="banner-typed-text"></span>friends
      </p>
    <%= link_to "Share your pet", new_animal_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @animals.each do |animal| %>
      <div class="col-12 col-md-6 col-lg-3">
        <% if animal.photo.attached? %>
          <% background_url = cl_image_path animal.photo.key, width: 400, height: 500, crop: :fill %>
        <% else %>
         <!--  <% background_url = 'https://source.unsplash.com/500x400/?animal' %> -->
        <% end %>
        <div class="card" style="background-image: url('<%= background_url %>');">
          <div class="card-description">
            <h2><%= link_to animal.name, animal_path(animal) %></h2>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>


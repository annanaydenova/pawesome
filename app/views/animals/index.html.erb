<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= image_path 'puppies.jpg' %>'); object-fit: cover;">
  <div class="banner-content">
    <br>
    <br>
    <h1>Be Pawesome</h1>
      <p>
        Join thousands of happy <span id="banner-typed-text"></span>friends
      </p>
    <%= link_to "Share your pet", new_animal_path, class: "btn btn-flat" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @animals.each do |animal| %>
      <div class="col-12 col-md-6 col-lg-3 m-2">
        <% if animal.photo.attached? %>
          <% background_url = cl_image_path animal.photo.key, width: 400, height: 500, crop: :fill %>
        <% else %>
         <!--  <% background_url = 'https://source.unsplash.com/500x400/?animal' %> -->
        <% end %>
        <%= link_to animal_path(animal) do %>
          <div class="card" style="background-image: url('<%= background_url %>');">
            <div class="card-description">
              <h2 class="animal-name"><%= animal.name.capitalize %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


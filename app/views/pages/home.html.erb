<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= image_path 'puppies.jpg' %>'); object-fit: cover;">
  <div class="banner-content">
    <br>
    <br>
    <h1><i class="fas fa-paw"></i> Be Pawesome</h1>
      <p>
        Join thousands of happy <span id="banner-typed-text"></span>friends
      </p>
      <div class="container-equal-margin mb-5">
        <%= form_tag animals_path, method: :get do %>
          <div class="d-flex align-items-center">
            <%= text_field_tag :query,
            params[:query],
            class: "form-control mr-1",
            placeholder: "Find a pet"
            %>
            <%= submit_tag "Search", class: "btn btn-flat" %>
          </div>
        <% end %>
      </div>
  </div>
</div>



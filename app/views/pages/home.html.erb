<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= image_path 'puppies.jpg' %>'); object-fit: cover;">
  <div class="banner-content">
    <br>
    <br>
    <h1><i class="fas fa-paw"></i> Be Pawesome</h1>
      <p>
        Join thousands of happy <span id="banner-typed-text"></span>friends
      </p>
      <div class="container-equal-margin mb-5">
        <%= form_tag animals_path, method: :get do %>
          <div class="d-flex align-items-center">
            <%= text_field_tag :query,
            params[:query],
            class: "form-control mr-1",
            placeholder: "Find a pet"
            %>
            <%= submit_tag "Search", class: "btn btn-flat" %>
          </div>
        <% end %>
      </div>
  </div>
</div>


 <div class="container-equal-margin home">
  <h1>Why use Pawesome?</h1>
  <div class="row">
    <div class="col">
      <h2><i class="fas fa-heart"></i> Share the love</h2>
      <p>
        Our members sign up to share their love for animals and make other people happy
      </p>
    </div>
    <div class="col">
      <h2><i class="fas fa-paw"></i> Community</h2>
      <p>
        Join like minded people in your local area who are part of the largest animal-loving community
      </p>
    </div>
    <div class="col">
      <h2><i class="fas fa-check-square"></i> Safety</h2>
      <p>
        At Pawesome we take animal safety very seriously. Pawesome membership includes insurance
      </p>
    </div>
  </div>
  <div style="margin-top: 30px" class="row align-items justify-content-center">
    <% @animals.each do |animal| %>
      <div class="col-12 col-md-6 col-lg-4">
        <% if animal.photo.attached? %>
          <% background_url = cl_image_path animal.photo.key, width: 400, height: 500, crop: :fill %>
        <% else %>
         <!--  <% background_url = 'https://source.unsplash.com/500x400/?animal' %> -->
        <% end %>
        <%= link_to animal_path(animal) do %>
          <div class="card-around">
            <div class="test-card" style="background-image: url('<%= background_url %>');">
                <h2 class="animal-name"><%= animal.name.capitalize %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div style="margin-bottom: 30px; margin-top: 30px">
     <%= link_to "Discover all our buddies", animals_path, class: "btn btn-flat" %>
    </div>
  </div>
</div>







